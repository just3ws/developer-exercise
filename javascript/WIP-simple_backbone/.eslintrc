{
  "env": {
    "browser": true,
    "es6": true,
    "jquery": true,
    "mocha": true
  },
  "parser": "babel-eslint",
  "ecmaFeatures": { "modules": true },
  "globals": {
    "_": true,
    "Backbone": true,
    "assert": false
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["warn", "single"],
    "semi": ["error", "always"],
    "no-console": "off",
    "no-unused-vars": [2, {
      "vars": "local",
      "args": "none"
    }],
    "no-unused-labels": "warn"
  }
}
